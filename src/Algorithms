public class Algorithms {
    static MyArrayList<Elevator> nextFit(MyArrayList<Person> people) {
        // All the elevator used will be stored in the elevators
        // elevators will be returned as the result of the algorithm
        MyArrayList<Elevator> elevators = new MyArrayList<>();

        // Add the first elevator into elevators
        elevators.add(new Elevator());

        // Index of the currently used elevator
        idx = 0;

        // NextFit algorithm
        for(Person p : people) {
            elevator = elevators.get(idx);

            if(elevator.canHandle(p)) {
                elevator.push(p);
            } else {
                elevators.add(new Elevator());
                idx++;
            }
        }

        // Return the elevators
        return elevators;
    }
}